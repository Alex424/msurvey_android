                                        android:textSize="@dimen/sp_18" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/dp_10"
                                        android:gravity="center_vertical"
                                        android:text="@string/car_choice_b"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp_18" />

                                    <EditText
                                        android:id="@+id/edtRB"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/edit_box_height_small"
                                        android:background="@drawable/bg_editbox_round"
                                        android:gravity="left|top"
                                        android:maxLines="1"
                                        android:inputType="numberDecimal"
                                        android:nextFocusDown="@+id/edtRC"
                                        android:paddingLeft="@dimen/dp_10"
                                        android:paddingRight="@dimen/dp_10"
                                        android:paddingTop="@dimen/dp_5"
                                        android:textColor="@color/common_grey_text_color"
                                        android:textSize="@dimen/sp_18" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/dp_10"
                                        android:gravity="center_vertical"
                                        android:text="@string/car_choice_c"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp_18" />

                                    <EditText
                                        android:id="@+id/edtRC"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/edit_box_height_small"
                                        android:background="@drawable/bg_editbox_round"
                                        android:gravity="left|top"
                                        android:maxLines="1"
                                        android:inputType="numberDecimal"
                                        android:nextFocusDown="@+id/edtRD"
                                        android:paddingLeft="@dimen/dp_10"
                                        android:paddingRight="@dimen/dp_10"
                                        android:paddingTop="@dimen/dp_5"
                                        android:textColor="@color/common_grey_text_color"
                                        android:textSize="@dimen/sp_18" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/dp_10"
                                        android:gravity="center_vertical"
                                        android:text="@string/car_choice_d"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp_18" />

                                    <EditText
                                        android:id="@+id/edtRD"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/edit_box_height_small"
                                        android:background="@drawable/bg_editbox_round"
                                        android:gravity="left|top"
                                        android:maxLines="1"
                                        android:inputType="numberDecimal"
                                        android:nextFocusDown="@+id/edtHeight"
                                        android:paddingLeft="@dimen/dp_10"
                                        android:paddingRight="@dimen/dp_10"
                                        android:paddingTop="@dimen/dp_5"
                                        android:textColor="@color/common_grey_text_color"
                                        android:textSize="@dimen/sp_18" />

                                </LinearLayout>

                            </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                <!--
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
