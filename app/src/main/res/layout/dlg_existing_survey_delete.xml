<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:background="@drawable/bg_white_dlg_round_bigger"
    android:clickable="true"
    android:orientation="vertical">

    <com.mad.survey.libs.ClickEffectImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_dlg_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_15">

        <TextView
            android:id="@+id/txtProjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_content_horizontal_padding"
            android:paddingRight="@dimen/common_content_horizontal_padding"
            android:text="Project 001"
            android:textColor="@color/common_grey_text_color"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtProjectDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_content_horizontal_padding"
            android:paddingRight="@dimen/common_content_horizontal_padding"
            android:text="2016-06-24"
            android:textColor="@color/common_grey_text_color"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/txtProjectStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_content_horizontal_padding"
            android:paddingRight="@dimen/common_content_horizontal_padding"
            android:text="Not Submitted"
            android:textColor="@color/common_grey_text_color"
            android:textSize="@dimen/sp_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/common_content_horizontal_padding"
            android:paddingRight="@dimen/common_content_horizontal_padding"
            android:paddingTop="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/ic_confirm_deletion" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/confirm_deletion_desc"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/common_grey_text_color" />

        <TextView
            android:id="@+id/btnYes"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/bg_white_red_btn"
            android:gravity="center"
            android:text="@string/yes"
            android:textColor="@color/common_grey_text_color"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/common_grey_text_color" />

        <TextView
            android:id="@+id/btnNo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/bg_white_dlg_round_bottom_btn"
            android:gravity="center"
            android:text="@string/no"
            android:textColor="@color/common_grey_text_color"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>