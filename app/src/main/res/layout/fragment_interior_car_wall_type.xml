<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:clickable="true"
    android:orientation="vertical">

    <include layout="@layout/view_common_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtSubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/dp_8"
                    android:paddingLeft="@dimen/common_content_horizontal_padding"
                    android:paddingRight="@dimen/common_content_horizontal_padding"
                    android:paddingTop="@dimen/dp_8"
                    android:text="Bank X Description Here"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_header_subtitle_size"
                    android:textStyle="italic" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_8"
                    android:paddingLeft="@dimen/common_content_horizontal_padding"
                    android:paddingRight="@dimen/common_content_horizontal_padding"
                    android:paddingTop="@dimen/dp_8">

                    <TextView
                        android:id="@+id/txtCarNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Car 1 of N - Car Number"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_5"
                        android:text="@string/interior_car_front_wall_type"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_18"
                        android:id="@+id/txtDoorDirection"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/white" />

                <LinearLayout
                    android:id="@+id/btn3Piece"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_grey_red_btn"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_25"
                    android:paddingLeft="@dimen/common_content_horizontal_padding"
                    android:paddingRight="@dimen/common_content_horizontal_padding"
                    android:paddingTop="@dimen/dp_25">

                    <CheckBox
                        android:id="@+id/chk3Piece"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:background="@drawable/ic_checkbox"
                        android:button="@null"
                        android:clickable="false"
                        android:duplicateParentState="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="@string/interior_car_front_wall_type_3_piece"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_20" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/white" />

                <LinearLayout
                    android:id="@+id/btn5Piece"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_grey_red_btn"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_25"
                    android:paddingLeft="@dimen/common_content_horizontal_padding"
                    android:paddingRight="@dimen/common_content_horizontal_padding"
                    android:paddingTop="@dimen/dp_25">

                    <CheckBox
                        android:id="@+id/chk5Piece"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:background="@drawable/ic_checkbox"
                        android:button="@null"
                        android:clickable="false"
                        android:duplicateParentState="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="@string/interior_car_front_wall_type_5_piece"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_20" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/white" />

                <LinearLayout
                    android:id="@+id/btnHybrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_grey_red_btn"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_25"
                    android:paddingLeft="@dimen/common_content_horizontal_padding"
                    android:paddingRight="@dimen/common_content_horizontal_padding"
                    android:paddingTop="@dimen/dp_25">

                    <CheckBox
                        android:id="@+id/chkHybrid"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:background="@drawable/ic_checkbox"
                        android:button="@null"
                        android:clickable="false"
                        android:duplicateParentState="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="@string/interior_car_front_wall_type_hybrid"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_20" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_content_horizontal_padding"
                    android:paddingRight="@dimen/common_content_horizontal_padding"
                    android:paddingTop="@dimen/dp_10"
                    android:text="@string/notes"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18"/>

                <EditText
                    android:id="@+id/edtNotes"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginLeft="@dimen/common_content_horizontal_padding"
                    android:layout_marginRight="@dimen/common_content_horizontal_padding"
                    android:layout_marginBottom="@dimen/common_content_horizontal_padding"
                    android:background="@drawable/bg_editbox_round"
                    android:gravity="left|top"
                    android:imeOptions="actionDone"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_5"
                    android:textColor="@color/common_grey_text_color"
                    android:textSize="@dimen/sp_18" />

            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:background="@drawable/bg_shadow_header" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutNavButtons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/common_content_horizontal_padding"
        android:paddingRight="@dimen/common_content_horizontal_padding"
        android:paddingTop="@dimen/dp_8"
        android:visibility="visible">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_navbtn_round"
            android:drawableLeft="@drawable/ic_grey_left_indicator"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_5"
            android:text="@string/back"
            android:textColor="@color/common_grey_text_color"
            android:textSize="@dimen/sp_18" />

        <com.mad.survey.libs.ClickEffectImageView
            android:id="@+id/btnHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_help_red_btn"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_navbtn_round"
            android:drawablePadding="@dimen/dp_5"
            android:drawableRight="@drawable/ic_grey_right_indicator"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="@string/next"
            android:textColor="@color/common_grey_text_color"
            android:textSize="@dimen/sp_18"
            android:visibility="visible"/>

    </RelativeLayout>

</LinearLayout>